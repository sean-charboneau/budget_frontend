extends layout

block extraHeader
	script(type="text/javascript" src="/js/home.js")

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Welcome #{user.first_name}. Account Info:
						div.signup-wall
							ul.user-details
								li Username ---> #{user.username}
								li Email    ---> #{user.email}
								li First Name ---> #{user.first_name} 
								li Last Name ---> #{user.last_name}
						a(href='#', onclick='signOut();' class='text-center new-account') Sign Out